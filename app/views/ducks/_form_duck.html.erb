<%= form_for @duck do |f| %>

    <% if @duck.errors.any? %>
    <% @duck.errors.full_messages.each do |msg| %>
        <div><%= msg %></div>
        <% end %>
    <% end %>

  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :description %>
  <%= f.text_field :description %>
  <%= f.label :student %>
  <%= f.collection_select :student_id, Student.all, :id, :name, prompt: true %>
  <%= f.submit %>
<% end %>